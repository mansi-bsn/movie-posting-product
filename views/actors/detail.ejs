<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= actor.name %> - Movie Posting Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <% if (actor.photo) { %>
                    <img src="<%= actor.photo %>" class="img-fluid rounded">
                <% } %>
            </div>
            <div class="col-md-8">
                <h1><%= actor.name %></h1>
                <% if (actor.age) { %><p><strong>Age:</strong> <%= actor.age %></p><% } %>
                <% if (actor.bio) { %><p><%= actor.bio %></p><% } %>
                
                <h3 class="mt-4">Movies</h3>
                <div class="row">
                    <% actor.moviesWorkedIn.forEach(movie => { %>
                        <div class="col-md-3 mb-3">
                            <a href="/movies/<%= movie._id %>">
                                <% if (movie.poster) { %>
                                    <img src="<%= movie.poster %>" class="img-fluid rounded" style="height: 200px; object-fit: cover;">
                                <% } %>
                                <p class="mt-2"><%= movie.title %></p>
                            </a>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

